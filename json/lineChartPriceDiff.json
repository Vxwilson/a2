{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Coffee Price Difference to Average Over Time"
    },
    "width": 580,
    "height": 350,
    "data": {
        "url": "data/indicator_prices_avgdiff.csv",
        "format": {
            "type": "csv"
        }
    },
    "transform": [
        {
            "calculate": "timeParse(datum.months, '%m/%Y')",
            "as": "date"
        },
        {
            "fold": [
                "Colombian Milds",
                "Other Milds",
                "Brazilian Naturals",
                "Robustas"
            ],
            "as": [
                "Coffee Type",
                "Price"
            ]
        }
    ],
    "mark": {
        "type": "line",
        "size": 1.5,
        "interpolate": "basis",
        "color": "#596988",
        "cursor": "pointer"
    },
    "encoding": {
        "x": {
            "field": "date",
            "type": "temporal",
            "title": "Month/Year",
            "axis": {
                "format": "%b %Y"
            }
        },
        "y": {
            "field": "Price",
            "type": "quantitative",
            "title": "Price Difference to Average (US dollars per kilogram)",
            "scale": {
                "zero": false
            }
        },
        "color": {
            "field": "Coffee Type",
            "type": "nominal",
            "title": "Coffee Type",
            "scale": {
                "range": [
                    "#596988",
                    "#a57ca5",
                    "#ec939c",
                    "#ffa78f"
                ]
            }
        },
        "tooltip": [
            {
                "field": "date",
                "type": "temporal",
                "title": "Date",
                "format": "%b %Y"
            },
            {
                "field": "Coffee Type",
                "type": "nominal",
                "title": "Coffee Type"
            },
            {
                "field": "Price",
                "type": "quantitative",
                "title": "Price",
                "format": ".2f"
            }
        ]
    }
}