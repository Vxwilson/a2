{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 450,
  "title": {
    "text": {
      "signal": "yearSelection + ' Coffee Production by Country'"
    },
    "anchor": "start",
    "dx": 140,
    "subtitle": "Production in millions of 60-kg bags."
  },
  "data": {
    "url": "data/total-production.csv",
    "format": {
      "type": "csv"
    },
    "name": "exports_data"
  },
  "transform": [
    {
      "fold": [
        "1990",
        "1991",
        "1992",
        "1993",
        "1994",
        "1995",
        "1996",
        "1997",
        "1998",
        "1999",
        "2000",
        "2001",
        "2002",
        "2003",
        "2004",
        "2005",
        "2006",
        "2007",
        "2008",
        "2009",
        "2010",
        "2011",
        "2012",
        "2013",
        "2014",
        "2015",
        "2016",
        "2017",
        "2018"
      ],
      "as": ["year", "export"]
    },
    {
      "filter": "toNumber(datum.year) == yearSelection"
    },
    {
      "calculate": "toNumber(datum.export) > 0",
      "as": "hasExport"
    },
    {
      "filter": "datum.hasExport == true"
    },
    {
      "calculate": "toNumber(datum.export) / 1000",
      "as": "exportinmil"
    }
  ],
  "params": [
    {
      "name": "yearSelection",
      "value": 1990,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2018,
        "step": 1,
        "name": " "
      }
    }
  ],
  "layer": [
    
    {
      "params": [
        {
          "name": "hoveredCountry",
          "select": {
            "type": "point",
            "fields": ["exports"],
            "on": "mouseover"
          }
        },
        {
          "name": "selectedCountry",
          "select": {
            "type": "point",
            "fields": ["exports"]
          }
        },
        {
          "name": "brush",
          "select": { "type": "interval", "encodings": ["y"] }
        }
      ],
      "transform": [
        {
          "calculate": "format(datum.exportinmil, '.3f') + ' million bags of coffee.'",
          "as": "exporttooltip"
        },
        {
          "calculate": "toNumber(datum.exportinmil)",
          "as": "exportinmil"
        }
      ],
      "mark": {
        "type": "bar",
        "tooltip": true,
        "cornerRadiusEnd": 4,
        "cursor": "pointer",
        "stroke": "#1932c8"
      },
      "encoding": {
        "x": {
          "field": "exportinmil",
          "type": "quantitative",
          "title": "Production (millions of 60kg bags)"
        },
        "y": {
          "field": "exports",
          "type": "nominal",
          "sort": "-x",
          "stack": "null",
          "title": ""
        },
        "color": {
          "field": "exportinmil",
          "type": "quantitative",
          "scale": {
            "range": [
              "#7c739b",
              "#a57ca5",
              "#cc86a4",
              "#ec939c",
              "#ffa78f",
              "#ffc184",
              "#ffdf84"
            ]
          },
          "strokeWidth": {
            "value": 0
          },
          "title": "Production"
        },
        "tooltip": [
          {
            "field": "exports",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "exporttooltip",
            "title": "Exports"
          }
        ],
        "opacity": {
          "condition": [

            {
              "param": "brush",
              "value": 1
            }
          ],
          "value": 0.3
        },
        "strokeWidth": {
          "condition": [
            {
              "param": "hoveredCountry",
              "value": 2,
              "empty": false
            }
          ],
          "value": 1.25
        }
      }
    },
  
    {
      "transform": [
        {
          "calculate": "toNumber(datum.exportinmil)",
          "as": "exportinmil"
        },
        {
          "aggregate": [
            {
              "op": "max",
              "field": "exportinmil",
              "as": "max_export"
            }
          ]
        },
        {
          "calculate": "split('Brazil alone produced ' + format(datum.max_export, '.2f') + ' million bags (60-kg) \\nof coffee, dominating global production.', '\\n')",
          "as": "formatted_export"
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "format": ".2f",

        "fontSize": 11,
        "fontWeight": "regular",
        "lineBreak": "\\n"
      },
      "encoding": {
        "text": {
          "field": "formatted_export"
        },
        "y": {
          "value": 23
        },
        "x": {
          "value": 550
        },
        "color": {
          "value": "#252a35"
        }
      }
    },
    
    {
      "transform": [
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "exportinmil",
              "as": "totalExport"
            },
            {
              "op": "count",
              "as": "countryCount"
            }
          ]
        },
        {
          "calculate": "split('In ' + yearSelection + ', ' + datum.countryCount  + ' countries produced \\na total of ' +  format(datum.totalExport, '.2f') + ' million bags.', '\\n')",
          "as": "countryCount"
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "format": ".2f",

        "fontSize": 11,
        "fontWeight": "regular"
      },
      "encoding": {
        "text": {
          "field": "countryCount"
        },
        "y": {
          "value": 400
        },
        "x": {
          "value": 325
        },
        "color": {
          "value": "#252a35"
        }
      }
    },
     {
        "transform": [{
          "filter": {"param": "brush"}
        }],
        "mark": "rule",
        "encoding": {

          "x": {
            "aggregate": "mean",
            "field": "exportinmil",
            "type": "quantitative"
          },
          "color": {
            "value": "#363c4c"
          },
          "size": {"value": 2.5}
        }
        ,
        "zindex": {"value": -10}
      }
      
  ]
}
