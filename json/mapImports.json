{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Who's Drinking It?",
    "anchor": "start",
    "dx": 5,
    "subtitle": [
      "Geographically, coffee planters lie in the 'bean belt' between the",
      "Tropics of Cancer and Capricorn. They export to countries worldwide.",
      " Ûª",
      "Import in millions of 60-kg bags."
    ]
  },
  "width": 900,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "params": [
    {
      "name": "yearSelection",
      "value": 1990,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2018,
        "step": 1,
        "name": " "
      }
    }
  ],
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "graticule": true
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgray",
        "strokeWidth": 0.5
      }
    },
    {
      "data":{
        "url": "map/ne_10m_ocean.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#bfdbe870"
      }
    },
    {
      "transform": [
        {
          "calculate": "'No available data'",
          "as": "Note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Note",
            "type": "nominal"
          }
        ]
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "data/imports.csv"
            },
            "key": "imports",
            "fields": [
              "1990",
              "1991",
              "1992",
              "1993",
              "1994",
              "1995",
              "1996",
              "1997",
              "1998",
              "1999",
              "2000",
              "2001",
              "2002",
              "2003",
              "2004",
              "2005",
              "2006",
              "2007",
              "2008",
              "2009",
              "2010",
              "2011",
              "2012",
              "2013",
              "2014",
              "2015",
              "2016",
              "2017",
              "2018"
            ]
          }
        },
        {
          "calculate": "datum[yearSelection]/1000",
          "as": "Count"
        },
        {
          "calculate": "format(datum[yearSelection] * 1000 / 1000000, '.4f') + ' million bags (60-kg) of coffee.'",
          "as": "importtooltip"
        }
      ],
      "params": [
        {
          "name": "hoveredCountry",
          "select": {
            "type": "point",
            "fields": [
              "properties.NAME"
            ],
            "on": "mouseover"
          }
        },
        {
          "name": "selectedCountry",
          "select": {
            "type": "point",
            "fields": [
              "properties.NAME"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "cursor": "pointer",
        "stroke": "#1932c8",
        "strokeWidth": 0.75
      },
      "encoding": {
        "color": {
          "field": "Count",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              0,
              0.00001,
              0.0005,
              0.1,
              0.5,
              1,
              4,
              9,
              20
            ],
            "range": [
              "#ffffff00",
              "#fff9cea5",
              "#fffab8d9",
              "#f6d393",
              "#eeb07f",
              "#ffa481",
              "#e2827a",
              "#a55c69",
              "#9c577e"
            ]
          },
          "legend": {
            "title": "Imports"
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "importtooltip",
            "title": "imports"
          }
        ],
        "opacity": {
          "condition": [
            {
              "param": "selectedCountry",
              "value": 1
            },
            {
              "param": "hoveredCountry",
              "value": 0.8,
              "empty": false
            }
          ],
          "value": 0.3
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum.properties.NAME == 'Canada'"
        },
        {
          "calculate": "split('About 72 percent of Canadians \\n drank coffee yesterday [2].', '\\n')",
          "as": "annotationText"
        },
        {
          "calculate": "-165",
          "as": "longitude"
        },
        {
          "calculate": "36",
          "as": "latitude"
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": -65,
        "dy": 0
      },
      "encoding": {
        "longitude": {
          "field": "longitude"
        },
        "latitude": {
          "field": "latitude"
        },
        "text": {
          "field": "annotationText"
        },
        "color": {
          "value": "#252a35"
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum.properties.NAME == 'Canada'"
        },
        {
          "calculate": "-125",
